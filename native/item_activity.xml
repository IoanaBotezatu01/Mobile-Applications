<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="#BB90EF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="251dp"
            android:layout_height="31dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="28dp"
            android:focusable="false"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Deprecated,MissingConstraints" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="272dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:hint="Enter date"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Deprecated,MissingConstraints" />

        <EditText
            android:id="@+id/editTextTime"

            android:layout_width="119dp"
            android:layout_height="48dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="272dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:hint="Enter time "
            android:inputType="time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Deprecated,MissingConstraints" />

        <TextView
            android:id="@+id/textViewDuration"
            android:layout_width="112dp"
            android:layout_height="43dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="225dp"
            android:focusable="false"
            android:text=""
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="Deprecated,MissingConstraints" />

        <EditText
            android:id="@+id/editTextTextMultiLineDescription"

            android:layout_width="262dp"
            android:layout_height="50dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="172dp"
            android:layout_marginBottom="166dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:hint=" No details"
            android:inputType="textMultiLine"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="Deprecated,MissingConstraints" />

        <TextView
            android:id="@+id/textViewPriority"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="224dp"
            android:layout_marginBottom="120dp"
            android:focusable="false"
            android:text=""
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="81dp"
            android:layout_height="46dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="320dp"
            android:background="@drawable/texts"
            android:focusable="false"
            android:text="Title:"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="120dp"

            android:layout_height="48dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="272dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"

            android:inputType="text"
            android:text="Date &amp; Time:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp" />

        <EditText
            android:id="@+id/editTextText2"

            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginTop="116dp"
            android:layout_marginBottom="224dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            android:text="Duration:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="5dp" />

        <EditText
            android:id="@+id/editTextText3"

            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_marginTop="172dp"
            android:layout_marginBottom="168dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"
            android:text="Description:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="Deprecated,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="82dp"
            android:layout_height="48dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/texts"
            android:ems="10"
            android:focusable="false"
            android:inputType="text"

            android:text="Priority:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="Deprecated,MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="327dp"
            android:background="#31144E"
            app:barrierDirection="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="336dp"
            android:background="#371454"
            android:shadowColor="#3D1449"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="276dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:text="Edit"

            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/delete"
            android:layout_width="86dp"

            android:layout_height="48dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="276dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/button_background"
            android:elevation="20dp"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>